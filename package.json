{
  "name": "ravehub-bot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp para la comunidad Ravehub - Música Electrónica",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start . --attach --name ravehub",
    "docker": "pm2-runtime start . --name ravehub",
    "stop": "pm2 stop ravehub",
    "restart": "pm2 restart ravehub",
    "logs": "pm2 logs ravehub",
    "postinstall": "node -e \"try { require('sharp') } catch (e) { process.exit(1); }\" || npm install --ignore-engines sharp@0.33.5"
  },
  "author": "Ravehub Team",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "axios": "^1.6.0",
    "baileys": "^6.7.8",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "file-type": "^18.7.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "jimp": "^0.22.10",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "pm2": "^5.3.0",
    "qrcode-terminal": "^0.12.0",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.6"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.0.0"
  }
}
